<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="AdwPreferencesPage" id="theme">
    <property name="name">theme</property>
    <property name="title" translatable="yes">Theme</property>
    <property name="icon-name">preferences-desktop-theme-symbolic</property>
    <child>
      <object class="AdwPreferencesGroup" id="theme_group">
        <property name="title" translatable="yes">Theme Settings</property>
        
        <!-- Custom IME Light Theme -->
        <child>
          <object class="AdwPreferencesRow" id="custom-theme_row">
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>
                <child>
                  <object class="GtkCheckButton" id="custom_ime_light_theme_check">
                    <property name="active">false</property>
                    <property name="halign">start</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Custom IME light theme</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBoxText" id="custom_ime_light_theme_combo">
                    <property name="halign">end</property>
                    <items>
                      <item translatable="yes">(None)</item>
                      <!-- Add additional theme options here -->
                    </items>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Custom IME Dark Theme -->
        <child>
          <object class="AdwPreferencesRow" id="custom-theme-dark_row">
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">10</property>
                <child>
                  <object class="GtkCheckButton" id="custom_ime_dark_theme_check">
                    <property name="active">false</property>
                    <property name="halign">start</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Custom IME dark theme</property>
                    <property name="halign">start</property>
                    <property name="hexpand">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkComboBoxText" id="custom_ime_dark_theme_combo">
                    <property name="halign">end</property>
                    <items>
                      <item translatable="yes">(None)</item>
                      <!-- Add additional theme options here -->
                    </items>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Theme Help ExpanderRow -->
        <child>
          <object class="AdwExpanderRow" id="theme_help_expander_row">
            <property name="title" translatable="yes">Help</property>
            <property name="subtitle" translatable="yes">Click to expand for more information</property>
            
            <child>
              <object class="AdwPreferencesRow">
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">12</property>
                    <property name="margin-start">12</property>
                    <property name="margin-end">12</property>
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">12</property>

                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Support importing stylesheet generated by &lt;a href="https://github.com/openSUSE/IBus-Theme-Tools"&gt;IBus Theme Tools&lt;/a&gt; or provided by &lt;a href="https://github.com/openSUSE/IBus-Theme-Hub"&gt;IBus Theme Hub&lt;/a&gt;.</property>
                        <property name="use_markup">true</property>
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">When light theme and dark theme are turned on at the same time, the IBus theme will automatically follow GNOME Night Light mode, use light theme when off, and use dark theme when on. When only the light theme or dark theme is turned on, the IBus theme will always use the theme that is turned on.</property>
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">&lt;span size="small"&gt;&lt;b&gt;&lt;i&gt;Warning:&lt;/i&gt; If not for debugging, please DO NOT add any classes that&apos;s not started with &lt;i&gt;.candidate-* &lt;/i&gt; into IBus stylesheet to prevent from corrupting system themes.&lt;/b&gt;&lt;/span&gt;</property>
                        <property name="use_markup">true</property>
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>

                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">&lt;span size="small"&gt;&lt;b&gt;Note:&lt;/b&gt; Support stylesheets hot reload, CSS changes reflecting in real-time.&lt;/span&gt;</property>
                        <property name="use_markup">true</property>
                        <property name="wrap">true</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>

                  </object>
                </child>
              </object>
            </child>

          </object>
        </child>

      </object>
    </child>
  </object>
</interface>
