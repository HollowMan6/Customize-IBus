{
  "name": "customize-ibus",
  "version": "38.0.0",
  "description": "Customize IBus for orientation, font, ascii mode auto-switch, system tray menu entries; theme and background picture follow GNOME Night Light Mode.",
  "dependencies": {
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "lint": "eslint .",
    "postinstall": "husky install",
    "pre-commit": "lint-staged && eslint . --fix"
  },
  "eslintConfig": {
    "plugins": [
      "prettier"
    ],
    "extends": [
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "prettier/prettier": [
    "error",
    {
      "endOfLine": "auto"
    }
  ],
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:HollowMan6/Customize-IBus.git"
  },
  "keywords": [
    "ibus",
    "theme"
  ],
  "author": "Hollow Man",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/HollowMan6/Customize-IBus/issues"
  },
  "homepage": "https://github.com/HollowMan6/Customize-IBus#readme"
}
